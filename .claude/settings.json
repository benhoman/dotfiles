{
  "mcp": {
    "autoApprove": {
      "tools": [
        "mcp__mcp-atlassian__getAccessibleAtlassianResources",
        "mcp__mcp-atlassian__getJiraIssue",
        "mcp__mcp-atlassian__searchJiraIssuesUsingJql",
        "mcp__mcp-atlassian__getConfluenceSpaces",
        "mcp__mcp-atlassian__getConfluencePage"
      ]
    }
  },
  "model": "sonnet[1m]",
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send 'Claude Code' 'Awaiting your input'"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/bash_command_validator.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; if echo \"$file_path\" | grep -q '\\.py$'; then echo 'Auto-formatting like a boss...'; ruff check --fix \"$file_path\" && ruff format \"$file_path\"; fi; }"
          }
        ]
      }
    ]
  }
}
