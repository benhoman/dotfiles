# cd Aliases
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Copy with progress bar
alias cpv='rsync -ah --info=progress2'

# Git
alias gpuq="git pull upstream qa"
alias cg='cd `git rev-parse --show-toplevel`' # cd root of git repo
alias g="git"
alias gd="git diff"
alias gs="git status"
alias gw="git worktree"
alias gwa="gw add"
alias gwl="gw list"
alias gwp="gw prune"
alias gwr="gw remove"

# Count files in directory
alias count='find . -type f | wc -l'
alias counttop='find . -maxdepth 1 -type f | wc -l'

# SimpleHTTPServer
alias servethis="python3 -m http.server"

# Systemd
alias uctl="systemctl --user"
alias ujtl="journalctl --user"

